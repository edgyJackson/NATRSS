@model ExpeditionProject.Models.PeakSort

@{
    ViewData["Title"] = "Index";
}

<h1>Expeditions</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@

<div class="row">
    <a asp-action="SortbyDate" class="btn btn-secondary">Sort by Season</a>

    <a asp-action="SortbyPeak" class="btn btn-secondary" style="margin-left: 2%">Sort by Peak</a>

    <a asp-action="SortbySuccess" class="btn btn-secondary" style="margin-left: 2%">Sort by Success</a>

    <div class="col-sm-3">
        <form asp-action="SelectPeak">
            <div class="input-group-append">
                <select asp-for="mtnPeak.Id" class="form-control" asp-items="ViewBag.PeakId"></select>

                <button class="btn btn-primary" type="submit">Select</button>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Season
            </th>
            <th>
                Year
            </th>
            <th>
                Start Date
            </th>
            <th>
                Termination Reason
            </th>
            <th>
                Oxygen Used?
            </th>
            <th>
                Peak
            </th>
            <th>
                Trekking Agency
            </th>
            @* <th></th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.expeditions)
        {

            if (item.Year > 1950)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Season)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TerminationReason)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OxygenUsed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Peak.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrekkingAgency.Name)
                    </td>
                    @* <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td> *@
                </tr>
            }
        }
    </tbody>
</table>



