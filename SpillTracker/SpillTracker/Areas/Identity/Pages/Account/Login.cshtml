@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div style="text-align: center">
    <div>
        <section>
            <h2>Welcome</h2>
            <h4>Please sign in</h4>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" style="text-align:center;">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" style="margin-left: 25%; width:50%" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="text-align:center">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" style="margin-left: 25%; width:50%" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <input asp-for="Input.Token" id="tokenInput" hidden readonly/>
                </div>
                <div class="form-group">
                    <button 
                            type="submit" 
                            class="btn btn-primary g-recaptcha" 
                            data-sitekey="6LetBf0aAAAAAMdYVVnL__u9EQSsM4FbjR55bk4c" 
                            data-callback='onSubmit' 
                            data-action='submit' >
                        Login
                    </button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="https://www.google.com/recaptcha/api.js"></script>

<script>
    function onSubmit(token) {
        //console.log(token);
        $("#tokenInput").val(token);
        document.getElementById("account").submit();
    }
</script>
