        <div class="col-md-4 border rounded" style="padding-bottom: 1%">
            <h4 style="text-align:center">Create New Company</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label  asp-for="company.Name" class="control-label"></label>
                    <input id="companyName" onkeyup="clear()"  asp-for="company.Name" class="form-control" required minlength="3"/>
                    <span  asp-validation-for="company.Name" class="text-danger"></span>
                    
                </div>
                <p id="error" style="display: none; color: red">This name already exist!</p>
                <div class="form-group">
                    <label class="control-label">Number of Facilities</label>
                    <input  asp-for="company.NumFacilities" class="form-control" />
                    <span  asp-validation-for="company.NumFacilities" class="text-danger"></span>
                </div>
                @* <div class="form-group" >
                    <label  asp-for="company.AccessCode" class="control-label"></label>
                    <input  asp-for="company.AccessCode" class="form-control" />
                    <span  asp-validation-for="company.AccessCode" class="text-danger"></span>
                </div> *@
                <div class="form-group">
                    <input style="display: none;" id="clickBtn" type="submit" value="Create" class="btn btn-primary" />
                    <input type="button" id="createBtn" onclick="create()" value="Create" class="btn btn-primary">
                </div>
                <p id="success" style="display: none; color: green">Company created succesfully!</p>
            </form>
            <a asp-action="Index" asp-controller="Companies">company List</a>
        </div>

