                <label asp-for="AddressCity" class="control-label"></label>
                <input asp-for="AddressCity" class="form-control" />
                <span asp-validation-for="AddressCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressState" class="control-label"></label>
                <input asp-for="AddressState" class="form-control" />
                <span asp-validation-for="AddressState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressZip" class="control-label"></label>
                <input asp-for="AddressZip" class="form-control" />
                <span asp-validation-for="AddressZip" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SpillEvaporationRate" class="control-label"></label>
                <input asp-for="SpillEvaporationRate" class="form-control" />
                <span asp-validation-for="SpillEvaporationRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpillEvaporationRateUnits" class="control-label"></label>
                <input asp-for="SpillEvaporationRateUnits" class="form-control" />
                <span asp-validation-for="SpillEvaporationRateUnits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountEvaporated" class="control-label"></label>
                <input asp-for="AmountEvaporated" class="form-control" />
                <span asp-validation-for="AmountEvaporated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountEvaporatedUnits" class="control-label"></label>
                <input asp-for="AmountEvaporatedUnits" class="form-control" />
                <span asp-validation-for="AmountEvaporatedUnits" class="text-danger"></span>
