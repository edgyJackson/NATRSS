
@{
    ViewData["Title"] = "PaymentResponse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .response-text {
        text-align: center
    }
</style>

@if (!string.IsNullOrEmpty(ViewBag.OrderNumber))
{
<div class="response-text">
    <hr />
    <h2>Thank you</h2>
    <hr />
    Your order has been successfully processed! <br /> <br />
    ORDER NUMBER: @ViewBag.OrderNumber <br /> <br />
    <a asp-action="PDFReport" asp-controller="PDF" asp-route-id="@TempData["TheFormId"]">Generate PDF</a>
</div>
}
else
{
    <div class="response-text">
        <hr />
        <h2>Sorry, your order has been cancelled</h2>
    </div>
}  