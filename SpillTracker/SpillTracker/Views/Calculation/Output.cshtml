@model SpillTracker.Models.Calculation

<div style="text-align: center;">
    <h1>Calculation</h1>
    <p id="chemName">@Model.chemName</p>
    <span>Reportable Quantity: </span><span id="chemRW">@Model.reportableQuantity</span><span> lbs.</span> 
    <div hidden="true">
    @if(Model.cercla == true) 
    {
        <p id="cercla">CERCLA</p>
    }
    else 
    {
        <span id="cercla"> </span>
    }
    </div>
    <br>
    <br>

    <div style="text-align: center;">

      <div class="row" style="text-align: center;">
        <div class="col-sm" style="text-align: right;">
          <label style="margin-bottom: 2%; margin-top: 1%"  for="">Amount Released in lbs: </label> 
        </div>
        <div class="col-sm" style="text-align: left;">
          <input style="margin-bottom: 1%; margin-top: 1%"  type="number" min="0" id="amountReleased" required>
          <p id="errorAM"></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm" style="text-align: right;">
          <label style="margin-bottom: 2%; margin-top: 1%" for="">Time of Release in hours: </label>
        </div>
        <div class="col-sm" style="text-align: left;">
          <input style="margin-bottom: 1%; margin-top: 1%" type="number" min="0" id="timeReleased" required>
          <p id="errorTR"></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm" style="text-align: right;">
           <label style="margin-bottom: 1%; margin-top: 2%"  for="">Total percent of Mixture: </label>
        </div>
        <div class="col-sm" style="text-align: left;">
           <input style="margin-bottom: 1%; margin-top: 1%"  type="number" min="0"  id="percentReleased" required>
           <p id="errorPM"></p>
        </div>
      </div>
 
        <div >
          <button type="submit" id="calcButton"  class="btn btn-primary" data-toggle="modal"  data-target="#exampleModalCenter">Calculate</button>
        </div>
        

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" id="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="background-color: springgreen;" id="headergood"></h5>
        <h5 class="modal-title" id="headerbad"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <p id="timeTillReport"></p>
            <p id="dayRelease"></p>
      </div>
    </div>
  </div>
</div>




<br>
<br>

<div style="text-align: center; display: none" id="stats">
    <table class="table table-striped" style="margin-left: auto; margin-right: auto; width: 50%;">
      <tr>
        <th>Total Release</th>
        <td id="totalReleased"></td>
      </tr>
      <tr>
        <th>Amount Released x Percent of Mixture</th>
        <td id="mathTR"></td>
      </tr>
      <tr>
        <th>Amount Released per hour</th>
        <td id="releasePerHour"></td>
      </tr>
      <tr>
        <th>Total Release / Time of Release</th>
        <td id="mathAR"></td>
      </tr>
      <tr>
        <th>Time Till Report</th>
        <td id="timeTillReports"></td>
      </tr>
      <tr>
        <th>(Reportable Quantity / Amount Released per hour) - Time of Release</th>
        <td id="mathTTR"></td>
      </tr>
      
    </table>


</div>

<div style="text-align: center;">
    <a style="text-align: center;" type="submit" asp-controller="Calculation" asp-action="Index">Back to Search</a>
</div>



@section Scripts {
    <script src="/js/calculation.js" type="module"></script>
}